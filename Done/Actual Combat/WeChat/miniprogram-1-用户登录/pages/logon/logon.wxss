/* pages/logon/logon.wxss */
.mcontainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
} 

.item{
  flex-grow:1;
  height: 10%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 96%;
  padding: 0 2%;
}

.image{
  width: 500rpx;
  height: 120rpx;  
}

.login-item{
  width: 90%;
  margin-top: 30rpx;
  /* border-bottom: 1px solid #eee; */
  flex-grow:1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}

.login-item-info{
  font-size: 16px;
  color: #111;
  padding-bottom: 10px;
}

input {
	width:100%;
	height:40px;
  border:1px solid #dbdbdb;
  border-radius: 8px;
	outline:none;
	font-size:20px;
  text-indent:10px;
}

.login-pwd{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  flex-grow: 1;
  align-items: flex-end;
}

.login-btn{
  width: 80%;
  color: white;
  background-color: green;
  border-radius: 0;
  font-size: 14px;
}

.wechat-icon image{
  padding-top: 5px;
  width: 30px;
  height: 30px;
}